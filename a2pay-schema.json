{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "A2Pay",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "maxLength": 35,
      "description": "Unique identifier of the issued attestation.",
      "minLength": 1,
      "examples": [
        "8D8AC610-566D-4EF0-9C22-186B2A5ED793"
      ]
    },
    "payment-product": {
      "type": "string",
      "maxLength": 35,
      "description": "Payment product / scheme the account is connected to (e.g. sct-eu, sct-inst-eu, domestic such as bancomat-pay).",
      "minLength": 1,
      "examples": [
        "sct-eu",
        "sct-inst-eu",
        "bancomat-pay"
      ]
    },
    "initiation-url": {
      "type": "string",
      "maxLength": 200,
      "description": "URL to send the signed A2Pay presentation to.",
      "minLength": 1,
      "format": "url",
      "examples": [
        "https://bank.com/pay/7dfe5484g78/init"
      ]
    },
    "iban": {
      "type": "string",
      "description": "IBAN of the account. This is required when no BBAN is provided.",
      "pattern": "^([A-Z]{2}[ '+'\\'+'-]?[0-9]{2})(?=(?:[ '+'\\'+'-]?[A-Z0-9]){9,30}$)((?:[ '+'\\'+'-]?[A-Z0-9]{3,5}){2,7})([ '+'\\'+'-]?[A-Z0-9]{1,3})?$",
      "maxLength": 34,
      "examples": [
        "DE75512108001245126199"
      ]
    },
    "bic": {
      "type": "string",
      "description": "The BIC associated to the account.",
      "pattern": "^[A-Z]{4}[-]{0,1}[A-Z]{2}[-]{0,1}[A-Z0-9]{2}[-]{0,1}[0-9]{3}$",
      "maxLength": 11,
      "examples": [
        "SOGEDEFFXXX"
      ]
    },
    "bban": {
      "type": "string",
      "description": "BBAN of the account. Used for payment accounts without IBAN.",
      "pattern": "^[A-Z0-9]+$",
      "maxLength": 30
    },
    "pan": {
      "type": "string",
      "description": "Primary Account Number (PAN) of a card, may be tokenized by the ASPSP due to PCI DSS requirements.",
      "maxLength": 35
    },
    "maskedPan": {
      "type": "string",
      "description": "Primary Account Number (PAN) of a card in a masked form.",
      "maxLength": 35
    },
    "msisdn": {
      "type": "string",
      "description": "Alias to access a payment account via a registered mobile phone number.",
      "maxLength": 35,
      "examples": [
        "+491232233445566"
      ]
    },
    "email": {
      "type": "string",
      "description": "An alias to access a payment account via a registered email address.",
      "maxLength": 35,
      "format": "email",
      "examples": [
        "me@example.com"
      ]
    },
    "other": {
      "type": "string",
      "description": "An alias with proprietary coding.",
      "maxLength": 35
    },
    "currency": {
      "type": "string",
      "description": "ISO 4217 Alpha 3 currency code (e.g., USD, EUR).",
      "pattern": "^[A-Z]{3}$",
      "minLength": 3,
      "maxLength": 3,
      "examples": [
        "EUR",
        "NOK"
      ]
    },
    "name": {
      "type": "string",
      "description": "Name of the account.",
      "maxLength": 70,
      "examples": [
        "MyAccount"
      ]
    },
    "ownerName": {
      "type": "string",
      "description": "Name of the legal account owner. For corporate accounts, the corporate name is used. Multiple owners can be listed.",
      "maxLength": 140,
      "examples": [
        "John Smith"
      ]
    },
    "displayName": {
      "type": "string",
      "description": "Name of the account as defined by the account holder in online channels.",
      "maxLength": 70,
      "examples": [
        "John Household"
      ]
    }
  },
  "oneOf": [
    {
      "required": [
        "iban"
      ]
    },
    {
      "required": [
        "bban"
      ]
    },
    {
      "required": [
        "pan"
      ]
    },
    {
      "required": [
        "msisdn"
      ]
    },
    {
      "required": [
        "email"
      ]
    },
    {
      "required": [
        "other"
      ]
    }
  ]
}